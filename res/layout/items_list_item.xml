<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:background="@color/Item_Id_ColorBack"
        android:gravity="left|center_vertical"
        android:text="ID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Item_Id_Color"
        android:textColorLink="@color/Item_Id_Color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/Item_Name_ColorBack"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Item_Name_Color"
            android:textColorLink="@color/Item_Name_Color" />

        <TextView
            android:id="@+id/textViewNameFull"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/Item_NameFull_ColorBack"
            android:text="Full name"
            android:textColor="@color/Item_NameFull_Color"
            android:textColorLink="@color/Item_NameFull_Color" />
    </LinearLayout>

</LinearLayout>